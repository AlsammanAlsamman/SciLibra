<PopUpMessage>:
    size_hint: None, None
    size: 400, 400
    title: 'Message'
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            pos: 0, 0
            scroll_y: 0
            scroll_type: ['bars', 'content']
            TextInput:
                multiline: True
                text: root.message
                readonly: True
                # grey
                background_color: 0.8, 0.8, 0.8, 1
        GridLayout:
            cols: 2
            rows: 1
            size_hint_y: None
            height: 30
            Button:
                text: 'OK'
                on_release: root.close_popup()
            # copy message to clipboard
            Button:
                text: 'Copy'
                on_release: root.copy_message()
