<LibraryListView>:
    list_tool: list_tool
    canvas.before:
        Color:
            #dark green
            rgba: 0.5, 0, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    ScrollView:
        pos: 0, 0
        scroll_y: 1
        scroll_type: ['bars', 'content']
        do_scroll_x: False
        do_scroll_y: True
        # size_hint_y: self.height
        # fill parent
        # height: root.height
        size: root.size
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            id: list_tool
            padding: 1
            spacing: 1