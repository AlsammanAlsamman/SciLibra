<LibraryTooltip>:
    size_hint: None, None
    size: 400, 200
    title: 'tooltip'
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            pos: 0, 0
            scroll_y: 0
            scroll_type: ['bars', 'content']
            TextInput:
                multiline: True
                text: root.tooltip_text
                # light grey
                background_color: 0.8, 0.8, 0.8, 1
                readonly: True
        GridLayout:
            cols: 2
            rows: 1
            size_hint_y: None
            height: 30
            Button:
                text: 'OK'
                on_release: root.dismiss()
            # copy message to clipboard
            Button:
                text: 'Do not show again'
                on_release: root.do_not_show_again()