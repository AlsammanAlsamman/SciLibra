<Comment>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        spacing: 10
        padding: 10
        
        row_default_height: 40
        row_force_default: True
        cols_minimum: {0: 100, 1: 100, 2: 100, 3: 100, 4: 100}
        TextInput:
            id: comment_text
            text: root.text
            size_hint_y: None
            scroll_y: 0
            height: self.minimum_height
            text_size: self.width, None
            valign: 'middle'
            halign: 'center'
            font_size: 50
            color: 0.5, 0.5, 0.5, 1
            readonly: True
        Label:
            id: comment_author
            text: root.author
            font_size: 20
            color: 0.5, 0.5, 0.5, 1
            readonly: True
